{
  "manifest_version": 3,
  "name": "FlashWave AI Flashcards",
  "version": "1.0.0",
  "description": "Generate flashcards from selected text on any webpage using AI.",
  "permissions": ["contextMenus", "storage", "scripting", "tabs", "downloads"],
  "background": {
    "service_worker": "dist/background.js",
    "scripts": ["dist/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content-script.js"]
    }
  ],
  "action": {
    "default_title": "FlashWave Settings",
    "default_popup": "dist/popup/popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{9614b36c-3b96-49ee-b7b8-05718893a6e5}",
      "strict_min_version": "1.0.0"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "dist/common.css",
        "dist/flashcards/flashcards.html",
        "dist/flashcards/flashcards.js",
        "dist/flashcards/flashcards.css",
        "dist/flashcards/create-flashcards.html",
        "dist/flashcards/create-flashcards.js",
        "dist/flashcards/flashcard-form.css",
        "dist/flashcards/import-export.html",
        "dist/flashcards/import-export.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
