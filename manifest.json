{
  "manifest_version": 3,
  "name": "FlashWave AI Flashcards",
  "version": "1.0.0",
  "description": "Generate flashcards from selected text on any webpage using AI.",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "storage",
    "offscreen"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ],
  "action": {
    "default_title": "FlashWave Settings (Not Implemented)",
    "default_popup": "popup.html"
  }
}
