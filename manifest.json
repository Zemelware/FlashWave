{
  "manifest_version": 3,
  "name": "FlashWave AI Flashcards",
  "version": "1.0.0",
  "description": "Generate flashcards from selected text on any webpage using AI.",
  "permissions": ["contextMenus", "storage", "scripting"],
  "background": {
    "service_worker": "dist/background.js",
    "scripts": ["dist/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content_script.js"]
    }
  ],
  "action": {
    "default_title": "FlashWave Settings",
    "default_popup": "popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{9614b36c-3b96-49ee-b7b8-05718893a6e5}",
      "strict_min_version": "1.0.0"
    }
  }
}
